{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "module": "es2022",
      "target": "es2022",
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "allowJs": true,
      "moduleResolution": "node",
      "isolatedModules": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "types": [
        "jest",
        "node",
        "@testing-library/jest-dom"
      ],
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "config": ["src/config"],
        "auth/*": ["src/auth/*"],
        "hooks/*": ["src/hooks/*"],
        "services/*": ["src/services/*"]
      }
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.js",
      "src/**/*.jsx"
    ]
}
